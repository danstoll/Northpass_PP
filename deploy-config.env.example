# SSH Deployment Configuration
# Copy this file to deploy-config.env and update with your server details

# Production Server Configuration
PROD_SSH_HOST="your-production-server.com"
PROD_SSH_USER="your-username"
PROD_SSH_PORT="22"
PROD_REMOTE_PATH="/var/www/northpass-pp"
PROD_BACKUP_PATH="/var/backups/northpass-pp"

# Staging Server Configuration (optional)
STAGING_SSH_HOST="your-staging-server.com"
STAGING_SSH_USER="your-username"
STAGING_SSH_PORT="22"
STAGING_REMOTE_PATH="/var/www/staging-northpass-pp"
STAGING_BACKUP_PATH="/var/backups/staging-northpass-pp"

# SSL Certificate Configuration (if using Let's Encrypt)
SSL_EMAIL="your-email@domain.com"
SSL_DOMAIN="your-domain.com"

# Database Configuration (if needed)
# DB_HOST="localhost"
# DB_NAME="northpass_pp"
# DB_USER="northpass_user"
# DB_PASS="secure_password"

# Additional Settings
ENABLE_SSL="true"
ENABLE_GZIP="true"
ENABLE_CACHE="true"